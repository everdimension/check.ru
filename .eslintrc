{
    "extends": "airbnb",
    "rules": {
        "comma-dangle": [2, "never"],
        "indent": [2, "tab", { "SwitchCase": 1, "VariableDeclarator": 1 }],
        "no-nested-ternary": 0,
        "default-case": 0,
        "no-multi-spaces": [2, { "exceptions": { "VariableDeclarator": true } }],
        "new-cap": [2, { "capIsNewExceptions": ["Immutable", "Map"] }],
        "no-console": 0,

        "react/jsx-indent-props": [2, "tab"]
    }
}
